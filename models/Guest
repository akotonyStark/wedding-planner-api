const mongoose = require('mongoose')

const guest_schema = new mongoose.Schema({
    name: {
        type: String,
        required: true
    },
    email: {
        type: String,
        lowercase: true
    },
    phone: {
        type: String,
        default: false
    },
    group: {
        type: mongoose.SchemaTypes.ObjectId,
        ref: 'GuestGroup',
    },
    assigned: Boolean,
    gender: String,
    event: [String],
   
}, {timestamps:true})



const Guest =  mongoose.model('Guest', guest_schema)

module.exports = Guest